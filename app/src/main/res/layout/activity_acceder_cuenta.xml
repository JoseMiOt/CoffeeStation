<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccederCuenta"
    android:background="#280E0C">

    <TextView
        android:id="@+id/vTexto_accede"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vTexto_accede"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <Button
        android:id="@+id/btn_opcion1"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:backgroundTint="#280E0C"
        android:text="@string/accede_op_01"
        app:icon="@drawable/ic_correo"
        app:iconSize="40dp"
        app:iconTint="#8B5A56"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <Button
        android:id="@+id/btn_opcion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#280E0C"
        android:text="@string/accede_op_02"
        app:icon="@drawable/ic_mensaje_texto"
        app:iconSize="40dp"
        app:iconTint="#8B5A56"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.392" />
</androidx.constraintlayout.widget.ConstraintLayout>